@model TiendaWebApp.Models.Usuario
@{
    ViewData["Title"] = "Registro";
}

<h2>Registro de Usuario</h2>

<form asp-action="Registro" method="post">
    <div>
        <label>Email:</label>
        <input asp-for="Email" required />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label>Contraseña:</label>
        <input asp-for="Contrasena" type="password" required />
        <span asp-validation-for="Contrasena"></span>
    </div>
    <div>
        <label>Adicionado Por:</label>
        <input asp-for="AdicionadoPor" required />
        <span asp-validation-for="AdicionadoPor"></span>
    </div>
    <button type="submit">Registrarse</button>
</form>

<p>
    ¿Ya tienes cuenta? <a asp-action="Login">Inicia sesión aquí</a>.
</p>
