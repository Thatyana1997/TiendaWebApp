@model TiendaWebApp.Models.Usuario
@{
    ViewData["Title"] = "Registro";
}

<div class="container">
    <h2 class="center-align">Registro de Usuario</h2>

    <form asp-action="Registro" method="post">
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="Email" type="email" class="validate" required />
                <label asp-for="Email">Email</label>
                <span class="helper-text" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="Contrasena" type="password" class="validate" required />
                <label asp-for="Contrasena">Contraseña</label>
                <span class="helper-text" asp-validation-for="Contrasena"></span>
            </div>
        </div>

        <!-- Campos adicionales para el cliente -->
        <div class="row">
            <div class="input-field col s6">
                <input name="Nombre" type="text" class="validate" required />
                <label for="Nombre">Nombre</label>
            </div>
            <div class="input-field col s6">
                <input name="Apellido" type="text" class="validate" required />
                <label for="Apellido">Apellido</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <input name="Direccion" type="text" class="validate" required />
                <label for="Direccion">Dirección</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <input name="Telefono" type="text" class="validate" required />
                <label for="Telefono">Teléfono</label>
            </div>

            <div class="input-field col s6">
                <input name="FechaNacimiento" type="date" class="validate" required />
                <label for="FechaNacimiento">Fecha de Nacimiento</label>
            </div>
        </div> 
       
        <div class="row">
            <button type="submit" class="btn waves-effect waves-light blue col s12">Registrarse</button>
        </div>
    </form>

    @if (Model != null && Model.AdicionadoPor != null )
    {
        <div class="row">
            <div class="card-panel green lighten-4 green-text text-darken-4">
                <ul>
                    <li><strong>Adicionado Por:</strong> @Model.AdicionadoPor</li>
                    <li><strong>Fecha de Adición:</strong> @Model.FechaAdicion.ToString("dd/MM/yyyy HH:mm")</li>
                </ul>
            </div>
        </div>
    }

    <p class="center-align">
        ¿Ya tienes cuenta? <a asp-action="Login" class="blue-text text-darken-2">Inicia sesión aquí</a>.
    </p>
</div>
